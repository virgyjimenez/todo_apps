            <%= content_tag :div, msg, class: "alert alert-#{name}" %>
          <% end -%>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12" ALIGN=center>
          <%= yield %>
        </div>
      </div>
    </div>
<div class="row" ALIGN=center >
        <div class="col-lg-3" BGCOLOR="gray">
          <img class="img-circle" src="http://img2.wikia.nocookie.net/__cb20141005035142/disney/images/d/d7/Avengers-logo.png" alt="Generic placeholder image" width="80" height="80">
          <h2><font color="blue">Avengers</font></h2>
          <p>home</p>
